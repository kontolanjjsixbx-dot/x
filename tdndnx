const fs = require('fs');
const path = require('path');

// Create required directories
const dirs = ['sessions', 'backups', 'logs', 'lib'];
dirs.forEach(dir => {
  if (!fs.existsSync(dir)) {
    fs.mkdirSync(dir, { recursive: true });
  }
});

// Create package.json if not exists
const pkg = {
  name: "whatsapp-ban-terminal",
  version: "8.0.0",
  description: "WhatsApp self-ban premium tools",
  main: "index.js",
  scripts: {
    start: "node index.js",
    setup: "node setup-complete.js"
  },
  dependencies: {
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.5",
    "fs-extra": "^11.1.1",
    "progress": "^2.0.3",
    "axios": "^1.5.0"
  }
};

fs.writeFileSync('package.json', JSON.stringify(pkg, null, 2));

console.log(`
